---
// MainButton component - "Get my Resume"
export interface Props {
  text?: string;
}

const { text = "Get my Resume" } = Astro.props;
---

<button class="w-48 sm:w-60 lg:w-[266px] px-2.5 py-4 lg:py-7 bg-gradient-to-br from-transparent to-black/30 shadow-[0px_4px_200px_rgba(255,255,255,0.05)] overflow-hidden rounded-[10px] bg-[url('https://placehold.co/266x80')] bg-cover bg-center flex justify-center items-center gap-1.5 border-none cursor-pointer transition-all duration-200 hover:-translate-y-0.5 hover:shadow-[0px_6px_250px_rgba(255,255,255,0.08)]">
  <span class="text-white text-sm lg:text-lg font-normal leading-6 break-words">{text}</span>
  <div class="flex items-center gap-0.5">
    <div class="w-[7.39px] h-[7.39px] rotate-[41deg] origin-top-left bg-white"></div>
    <div class="w-[7.39px] h-[7.39px] rotate-[41deg] origin-top-left bg-white"></div>
    <div class="w-[2.11px] h-[19px] rotate-[41deg] origin-top-left bg-white"></div>
  </div>
</button>
