---
const logos = [
  { src: '/images/EnterprisesLogos/AncientLogo.png', alt: 'Ancient' },
  { src: '/images/EnterprisesLogos/AthenisAILogo.png', alt: 'Athenis AI' },
  { src: '/images/EnterprisesLogos/OpinatorLogo.png', alt: 'Opinator' },
  { src: '/images/EnterprisesLogos/SodioWhite.png', alt: 'Sodio' },
  { src: '/images/EnterprisesLogos/SpilLogo.png', alt: 'Spil' },
  { src: '/images/EnterprisesLogos/WebCraftersLogo.png', alt: 'WebCrafters' },
  { src: '/images/EnterprisesLogos/ZoekLogo.png', alt: 'Zoek' }
];

---

<section class="enterprises">
  <div class="container">
    <h2 class="title">Trusted by Leading Brands to Deliver Exceptional Design Solutions</h2>
    <div class="slider">
      {[...logos, ...logos].map((logo) => (
        <img src={logo.src} alt={logo.alt} class="logo" width="90" height="12" loading="lazy" />
      ))}
    </div>
  </div>
</section>


<style>
  .enterprises {
    background: #000;
    padding: 44px 0;
    overflow: hidden;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
  }

  .title {
    font-family: 'Median', serif;
    font-size: clamp(12px, 1vw, 12px);
    color: #fff;
    margin: 0 0 32px;
    font-weight: 500;
  }

  .slider {
    display: flex;
    gap: 80px;
    animation: scroll 30s linear infinite;
    width: max-content;
  }

  .logo {
    filter: grayscale(1) brightness(1.2);
    opacity: 0.8;
    object-fit: contain;

  }

  @keyframes scroll {
    to { transform: translateX(-50%); }
  }

  @media (prefers-reduced-motion: reduce) {
    .slider { animation: none; justify-content: center; flex-wrap: wrap; }
  }
</style>
